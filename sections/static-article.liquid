{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}{%- assign recentPosts = section.settings.recent-posts -%}
{%- assign tagList = section.settings.tag-list -%}

<script
  type="application/json"
  data-section-type="static-article"
  data-section-id="{{ section.id }}"
>
</script>

<section class="content content-area">
  {% include 'breadcrumbs' %}

  {% comment %}
  <div class="page-title">
    <h2 class="label"><a href="{{ blog.url }}">{% comment %}ly_code_replace_for_[ blog.title ]_begin{% endcomment %}{% include 'ly-title' with blog %}{{ ly_translation }}{% comment %}ly_code_replace_end{% endcomment %}</a></h2>
  </div>
  {% endcomment %}

  <div class="content-wrap clearfix">
    <section class="articles">
      {% include 'article-item' %}
    </section>

    {% if recentPosts or tagList %}
      {% include 'blog-sidebar' %}
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Article pages",
  "class": "section-article",
  "settings": [
    {
      "type": "header",
      "content": "General"
    },
    {
      "type": "checkbox",
      "id": "show-breadcrumbs",
      "label": "Show breadcrumbs",
      "default": true
    },
    {
      "type": "header",
      "content": "Sidebar"
    },
    {
      "type": "checkbox",
      "id": "recent-posts",
      "label": "Show recent posts",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "tag-list",
      "label": "Show tags",
      "default": false
    }
  ]
}

{% endschema %}
