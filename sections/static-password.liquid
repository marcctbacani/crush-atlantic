{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}<div data-section-id="{{ section.id }}" data-section-type="static-password">
  <section
    class="password-page-background"
    {% if section.settings.image %}
      {%
        include 'rimg'
        img: section.settings.image,
        size: '1440x1440',
        background: true,
        lazy: true
      %}
    {% endif %}
  >
    <div class="password-page content-area">
      <div class="password-page-header">
        <div class="password-page-inner">
          <a href="#modal-login" class="admin-login-modal">
            {% comment %}ly_i18n_replace_for_[ 'general.password_page.password_link' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'general.password_page.password_link' | t }}{% endcapture %}{% include 'ly-static-string' with '9617040' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}
          </a>
        </div>
      </div>

      <div class="password-page-content">
        <div class="password-page-inner">
          {{ content_for_layout }}

          <div class="password-page-logo">
            <h1 class="store-title">
			  {% comment %}ly_asset_replace_for_[ 'logo-crush-png.png' | asset_url | img_tag: 'Crush logo', '', 'small' ]_begin{% endcomment %}{% assign ly_asset = 'logo-crush-png.png' %}{% include 'ly-asset' with ly_asset %}{{ ly_translation  | img_tag: 'Crush logo', '', 'small' }}{% comment %}ly_asset_replace_end{% endcomment %}
            </h1>
          </div>
          <div class="password-page-signup-form">
            <div class="password-page-form-header">
              <h2>{% comment %}ly_i18n_replace_for_[ 'general.password_page.opening_soon' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'general.password_page.opening_soon' | t }}{% endcapture %}{% include 'ly-static-string' with '9617041' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</h2>

              {% unless shop.password_message == blank %}
                <p class="password-page-message">
                  {{ shop.password_message }}
                </p>
              {% endunless %}
              {% if section.settings.password-page-social-icons %}
                {% include 'social-links' %}
              {% endif %}
            </div>

            {% form 'customer', class: 'newsletter-signup' %}
              {{ form.errors | default_errors }}

              {% if form.posted_successfully? %}
                <p class="form-success">{% comment %}ly_i18n_replace_for_[ 'general.password_page.signup_form_success' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'general.password_page.signup_form_success' | t }}{% endcapture %}{% include 'ly-static-string' with '9617042' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</p>
              {% else %}
                {% if section.settings.newsletter_text != blank %}
                  <div class="form-title">{{ section.settings.newsletter_text }}</div>
                {% endif %}

                <div class="password-page-field-wrap">
                  <input class="password-page-input" type="text" name="contact[email]" id="email" placeholder="{% comment %}ly_i18n_replace_for_[ 'general.password_page.signup_form_email_placeholder' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'general.password_page.signup_form_email_placeholder' | t }}{% endcapture %}{% include 'ly-static-string' with '9617043' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}">
                  <input class="submit" name="commit" type="submit" value="{% comment %}ly_i18n_replace_for_[ 'general.password_page.signup_form_submit' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'general.password_page.signup_form_submit' | t }}{% endcapture %}{% include 'ly-static-string' with '9617044' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}">
                  <input type="hidden" name="contact[tags]" value="prospect, password page">
                </div>
              {% endif %}
            {% endform %}
          </div>
        </div>
      </div>

      <div class="password-page-footer" role="contentinfo">
        <div class="password-page-inner">
          {% capture shopify %}
            <a class="shopify-link" href="//www.shopify.com/" target="_blank" title="<ly-as-9617039>Create your own online store with Shopify</ly-as-9617039>">
              <span class="shopify-name"><ly-as-9617038>Shopify</ly-as-9617038></span>
            </a>
          {% endcapture %}
          {% comment %}ly_i18n_replace_for_[ 'general.password_page.powered_by_shopify_html' | t: shopify: shopify ]_begin{% endcomment %}{% capture ly_template %}{{ 'general.password_page.powered_by_shopify_html' | t: shopify: shopify }}{% endcapture %}{% include 'ly-static-string' with '9617046' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% assign replacement = shopify  %}{% assign ly_template = ly_template | replace: '[[shopify]]', replacement %}{% if escape_content %}{{ ly_template}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}
        </div>
      </div>

    </div>
  </section>

</div>

{% schema %}
{
  "name": "Password pages",
  "class": "section-password",
  "settings": [
    {
      "type": "header",
      "content": "General"
    },
    {
      "type": "checkbox",
      "id": "password-page-social-icons",
      "label": "Show social icons",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "richtext",
      "id": "newsletter_text",
      "label": "Newsletter text",
      "default": "<p>Find out when we open:</p>"
    }
  ]
}

{% endschema %}