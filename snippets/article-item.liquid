      <h1>
    </header>

    <!-- Article text -->
    <div class="rte clearfix">
      {% if article.image %}
        <div class="article-image">
          {% if template == 'article' %}
            {%
              include 'rimg'
              img: article.image,
              alt: article.title,
              size: '1024x1024',
              lazy: true
            %}
          {% else %}
            <a href="{{ article.url }}">
              {%
                include 'rimg'
                img: article.image,
                alt: article.title,
                size: '1024x1024',
                lazy: true
              %}
            </a>
          {% endif %}
        </div>
      {% endif %}
      {% if template == 'article' %}
        {% comment %}ly_code_replace_for_[ article.content ]_begin{% endcomment %}{% include 'ly-content' with article %}{{ ly_translation }}{% comment %}ly_code_replace_end{% endcomment %}
